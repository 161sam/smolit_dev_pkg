{
  "name": "smolit-dev",
  "version": "0.2.0",
  "description": "One-command Dev-Stack: OpenHands + MCP (SSE) + Claude-Bridge â€” modular CLI mit Plugin-System.",
  "type": "module",
  "license": "MIT",
  "bin": {
    "sd": "bin/sd-launch.cjs"
  },
  "files": [
    "bin/sd.bak.pre-modular",
    "bin/sd",
    "bin/sd-launch.cjs",
    "bin/bridge.mjs",
    "bin/postinstall.mjs",
    "lib/",
    "plugins/",
    "src/",
    "templates/",
    "env.example",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepack": "chmod +x bin/sd bin/sd.bak.pre-modular bin/bridge.mjs bin/postinstall.mjs bin/sd-launch.cjs",
    "postinstall": "node ./bin/postinstall.mjs",
    "lint": "eslint .",
    "format": "prettier -w .",
    "format:check": "prettier -c .",
    "lint:shell": "command -v shellcheck >/dev/null 2>&1 && find lib plugins -name '*.sh' -exec shellcheck {} + || echo 'shellcheck not installed'",
    "test": "node tests/run-tests.mjs",
    "test:modules": "bash -n lib/*.sh && echo 'All modules syntax OK'",
    "ci:smoke": "node ./bin/postinstall.mjs --dry-run && ./bin/sd --help || true"
  },
  "engines": {
    "node": ">=18.18"
  },
  "keywords": [
    "openhands",
    "mcp",
    "claude",
    "devstack",
    "cli",
    "modular",
    "plugins"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/161sam/smolit_dev_pkg.git"
  },
  "bugs": {
    "url": "https://github.com/161sam/smolit_dev_pkg/issues"
  },
  "homepage": "https://github.com/161sam/smolit_dev_pkg#readme",
  "preferGlobal": true,
  "dependencies": {
    "ws": "^8.17.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "eslint": "^9.8.0",
    "prettier": "^3.3.3"
  }
}
