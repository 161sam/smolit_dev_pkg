  "type": "module",
  "license": "MIT",
  "bin": {
    "sd": "bin/sd-launch.cjs"
  },
  "files": [
    "bin/sd",
    "bin/sd-launch.cjs",
    "bin/bridge.mjs",
    "bin/postinstall.mjs",
    "templates/",
    "env.example",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "prepack": "chmod +x bin/sd bin/bridge.mjs bin/postinstall.mjs bin/sd-launch.cjs",
